
<font size="-1">
  <%= link_to "Use Club Team"    , :action => 'new', :team_type => 'Team'  , :chronicle_id => @chronicle_id %>
  <%= nbsp(2) %>
  <%= link_to "Use National Team", :action => 'new', :team_type => 'Nation', :chronicle_id => @chronicle_id %>
</font>
<br />
<br />

<%= error_messages_for :season %>

<% form_for :season, :url => {:action => 'create'} do |f| -%>
  <label for="season_team_id">Team:&nbsp;</label>
  <%= f.collection_select :team_id, @teams, :id, :name %>
  <br />
  <label for="season_year_start">Year Start:&nbsp;</label>
  <%= f.text_field :year_start, :size => 5 %>
  <br />
  <%= f.check_box :closed %>
  <label for="season_closed">Closed</label>

  <%= f.hidden_field :chronicle_id, :value => @chronicle_id %>

  <p>
    <%= submit_tag 'Create' %>
    <%= nbsp(2) %>
    <%= link_to 'Cancel', :action => 'list', :chronicle_id => @chronicle_id %>
  </p>
<% end -%>

