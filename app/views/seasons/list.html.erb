
<h3>Choose a Season</h3>

<%= link_to 'Chronicles', :controller => 'chronicles', :action => 'list' %>

<ul id="season_list">
  <% @seasons.each do |season| -%>
    <% label = "#{season.team.name} #{season.years}" -%>
    <li class="<%= season.closed? ? 'closed' : '' %>">
      <%= link_to label, :controller => 'players', :action => 'list', :season_id => season %>
    </li>
  <% end -%>
</ul>

