
<%= link_to 'Chronicles', :controller => 'chronicles', :action => 'list' %>

<ul id="season_list">
  <% @seasons.each do |season| -%>
    <li class="<%= season.closed? ? 'closed' : '' %>">
      <%= link_to season.name_and_years, :controller => 'matches', :action => 'list', :season_id => season %>
      <font size="-1">
        <%= link_to 'Players', :controller => 'players', :action => 'list', :season_id => season %>
        <%= nbsp %>
        <%= link_to 'Edit'   , :controller => 'seasons', :action => 'edit', :id => season, :chronicle_id => @chronicle_id %>
      </font>
    </li>
  <% end -%>
</ul>

<div id="link_new_season">
  <%= link_to 'New Season', :action => 'new', :chronicle_id => @chronicle_id %>
</div>

