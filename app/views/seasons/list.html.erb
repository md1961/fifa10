
<%= link_to 'Chronicles', :controller => 'chronicles', :action => 'list' %>

<ul id="season_list">
  <% @seasons.each do |season| -%>
    <% label = "#{season.team.name} #{season.years}" -%>
    <li class="<%= season.closed? ? 'closed' : '' %>">
      <%= link_to label, :controller => 'matches', :action => 'list', :season_id => season %>
      <font size="-1">
        <%= link_to 'Players', :controller => 'players', :action => 'list', :season_id => season %>
      </font>
    </li>
  <% end -%>
</ul>

<div id="link_new_season">
  <%= link_to 'New Season', :action => 'new' %>
</div>

