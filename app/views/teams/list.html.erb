
<%= link_to 'Chronicles', :controller => 'chronicles', :action => 'list' %>
<%= nbsp(4) %>
<%= link_to 'New Team', :action => 'new' %>

<table id="table_teams" class="table_base">
  <tr>
    <% @column_names.each do |column_name| -%>
      <% name = column_name == 'year_founded' ? 'founded' : column_name -%>
      <th><%= column_name2display(name) %></th>
    <% end -%>
  </tr>

  <% @teams.each do |team| -%>
    <tr>
      <% @column_names.each do |column_name| -%>
        <td align="<%= column_align(column_name) %>">
          <% value = team.get(column_name) -%>
          <% if column_name == 'id' -%>
            <%= link_to value, :action => 'edit', :id => team %>
          <% else -%>
            <%= value %>
          <% end -%>
        </td>
      <% end -%>
    </tr>
  <% end -%>
</table>

