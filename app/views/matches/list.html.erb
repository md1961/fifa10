
<%= link_to '>> Chronicles', :controller => 'chronicles', :action => 'list' %>
<%= nbsp %>
<%= link_to ' > Seasons'   , :controller => 'seasons'   , :action => 'list', :chronicle_id => @chronicle %>
<%= nbsp(4) %>
<%= link_to 'Rosters', :controller => 'players', :action => 'list' %>
<%= nbsp(2) %>
<%= link_to 'Depth Chart', :controller => 'players', :action => 'depth_chart' %>
<%= nbsp(2) %>
<%= link_to 'Roster Chart', :controller => 'players', :action => 'roster_chart' %>
<br />
<% series_abbr = @match_filter.series_abbrs[0] -%>
<%= link_to_unless series_abbr == MatchFilter::ALL_SERIES, 'All',
        :action => 'filter_with_series', :series_abbrs => MatchFilter::ALL_SERIES %>
<% Series.premier_all.each do |series| -%>
  <% abbr = series.abbr -%>
  <%= nbsp %>
  <%= link_to_unless abbr == series_abbr, abbr, :action => 'filter_with_series', :series_abbrs => [abbr] %>
<% end -%>
<%= nbsp(2) %>
<%= link_to 'Filter', :action => 'choose_to_list' %>
<% unless (name_filter = @match_filter.player_name).blank? -%>
  <font size="-1"><%= "('#{name_filter}')" %></font>
  <%= link_to 'clear', :action => 'filter_on_list', :match_filter => {:player_name => nil} %>
<% end -%>
<%= nbsp(2) %>
<% label, value = @shows_link ? ["No Link", '0'] : ["Show Link", '1'] -%>
<%= link_to label, :action => 'list', :shows_link => value %>
<%= nbsp(2) %>
<% label, value = @is_font_bold ? ["Normal Font", '0'] : ["Bold Font", '1'] -%>
<%= link_to label, :action => 'set_is_font_bold', :is_font_bold => value %>
<%= nbsp(4) %>
<%= link_to 'New Match', :action => 'new' %>

<table id="table_matches" class="table_base">
  <%= render :partial => 'list',
             :locals => {:action => :list,
                         :id_to_edit => nil,
                         :column_names => column_names_for_list,
                         :shows_link => @shows_link} %> 
</table>

