
<!-- -->
<tr>
  <% column_names.each do |column_name| -%>
    <% colspan = column_name == 'scores_own' ? 2 : 1 -%>
    <th colspan="<%= colspan %>"><%= column_heading(column_name) %></th>
  <% end -%>
</tr>
<!-- -->

<% @matches.each do |match| -%>
  <% if match.id == id_to_edit -%>
    <%= render :partial => 'form', :locals => {:column_names => column_names} %>
  <% else -%>
    <tr>
      <% column_names.each do |column_name| -%>
        <%= render :partial => 'match', :object => match, :locals => {:column_name => column_name} %>
      <% end -%>
    </tr>
  <% end -%>
<% end -%>

