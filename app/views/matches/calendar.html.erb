
<p>
  <%= link_to 'Roster Chart', roster_chart_path(:is_lineup => @is_lineup ? 1 : 0) %>
</p>

<% prev_date = @date_start.prev_month.beginning_of_month
   next_date = @date_start.next_month.beginning_of_month -%>
<%= link_to '<<', calendar_matches_path(:date_start => prev_date      , :is_lineup => @is_lineup ? 1 : 0) %>
<%= nbsp %>
<%= link_to '<' , calendar_matches_path(:date_start => @date_start - 7, :is_lineup => @is_lineup ? 1 : 0) %>
<%= nbsp %>
<%= @date_start.to_formatted_s(:month_year) %>
<%= nbsp %>
<%= link_to '>' , calendar_matches_path(:date_start => @date_start + 7, :is_lineup => @is_lineup ? 1 : 0) %>
<%= nbsp %>
<%= link_to '>>', calendar_matches_path(:date_start => next_date      , :is_lineup => @is_lineup ? 1 : 0) %>

<table>
  <tr>
    <td style="vertical-align: top;">
      <% dates = make_dates_for_calendar(@date_start, 2) -%>
      <%= render :partial => 'calendar', :locals => {:dates => dates} %>
    </td>

    <td style="vertical-align: top; padding-left: 30px;">
      <% dates = make_dates_for_calendar(dates.last + 1, 2) -%>
      <%= render :partial => 'calendar', :locals => {:dates => dates} %>
    </td>
  </tr>
</table>

