
<% case column_name
   when 'series_id' -%>
  <%= f.collection_select 'series_id', Series.premier_all, :id, :abbr %>
  <%= f.text_field 'subname'   , :size => 10 %>
<% when 'opponent_id' -%>
  <%= f.collection_select 'opponent_id', Team.find(:all, :order => 'name'), :id, :name %>
<% when 'scores_own' -%>
  <%= f.text_field 'scores_own', :size =>  2 %>
  -
  <%= f.text_field 'scores_opp', :size =>  2 %>
<% when 'pks_own' -%>
  PK
  <%= f.text_field 'pks_own'   , :size =>  2 %>
  -
  <%= f.text_field 'pks_opp'   , :size =>  2 %>
<% else -%>
  <%= f.text_field column_name , :size => text_field_size(column_name) %>
<% end -%>

