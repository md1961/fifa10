
<% unless @match.errors.empty? -%>
  <tr>
    <td colspan="<%= column_names.size %>">
      <%= error_messages_for :match %>
    </td>
  </tr>
<% end -%>

<% form_for @match do |f| -%>
  <tr>
    <%= f.hidden_field :opponent_type %>
    <% if @scores_only -%>
      <td colspan="2"><%= @match.date_match %></td>
      <td colspan="2"><%= @match.series.abbr %></td>
      <td colspan="2"><%= @match.subname %></td>
      <td>
        <%= @match.ground %>
        <%= nbsp(2) %>
        <%= @match.opponent.abbr || @match.opponent.name %>
      </td>

      <%= f.hidden_field :date_match %>
      <%= f.hidden_field :series_id %>
      <%= f.hidden_field :subname %>
      <%= f.hidden_field :ground %>
      <%= f.hidden_field :opponent_id %>
    <% else -%>
      <td colspan="2"><%= f.text_field :date_match, :size => 10 %></td>
      <% series = series_for_collection_select(@season_id) -%>
      <td colspan="2"><%= series.size == 1 ? series[0].abbr : f.collection_select('series_id', series, :id, :abbr) %></td>
      <td colspan="2"><%= f.text_field :subname, :size => 8 %></td>
      <td>
        <%= f.select 'ground', grounds_for_select %>
        <%= f.collection_select 'opponent_id', teams_for_collection_select, :id, :name %>
      </td>
    <% end -%>
  </tr>
  <tr>
    <td colspan="2"><%= f.text_field 'scores_own', :size =>  2 %> - <%= f.text_field 'scores_opp', :size => 2 %> </td>
    <td colspan="5">own: <%= f.text_field :scorers_own, :size => 80 %></td>
  </tr>
  <tr>
    <td colspan="2">PK <%= f.text_field 'pks_own', :size =>  2 %> - <%= f.text_field 'pks_opp', :size => 2 %> </td>
    <td colspan="5">opp: <%= f.text_field :scorers_opp, :size => 80 %></td>
    <td>
      <%= submit_tag 'Submit' %>
      <% unless @match.new_record? -%>
        <%= nbsp(6) %>
        <%= link_to 'Delete', {:action => 'destroy', :id => @match},
                               :confirm => "OK to delete \"#{@match}\"?",
                               :class => "alertingBackground",
                               :method => :delete
                               %>
      <% end -%>
    </td>
  </tr>
<% end -%>

