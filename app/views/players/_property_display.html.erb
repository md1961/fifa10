
<% show_unit = false unless defined?(show_unit) -%>

<% case column.name
   when 'name' -%>
  <%= "<b>#{player.name}</b>" %>
<% when 'position_id' -%>
  <%= "<b>#{player.position.name}</b> #{player.sub_positions.map(&:name).join(' ')}" %>
<% when 'skill_move' -%>
  <%= '★' * player.skill_move %>
<% when 'is_right_dominant' -%>
  <%= player.is_right_dominant ? 'R' : 'L' %>
<% when 'both_feet_level' -%>
  <%= '☆' * player.both_feet_level %>
<% when 'height' -%>
  <%= player.height.to_s + (show_unit ? ' cm' : '') %>
<% when 'weight' -%>
  <%= player.weight.to_s + (show_unit ? ' kg' : '') %>
<% when 'nation_id' -%>
  <%= player.nation.name -%>
<% when 'market_value' -%>
  <%= number_with_delimiter(player.market_value) + (show_unit ? ' K' + [0x00A3].pack('U') : '') %>
<% else -%>
  <%= h player.send(:attributes)[column.name] %>
<% end -%>

