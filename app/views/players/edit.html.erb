
<% is_from_roster_chart = @is_from_roster_chart ? 1 : 0
   cancel_path = @is_from_list ? players_path \
                               : player_path(@player, :is_from_roster_chart => is_from_roster_chart) -%>

<%= error_messages_for :player %>

<p>
  <%= link_to 'Cancel', cancel_path %>
</p>

<%= form_for @player do |f| -%>
  <%= render :partial => 'base', :locals => {:shows_form => true, :f => f} %>
  <%= hidden_field_tag :is_from_list, @is_from_list %>
  <%= hidden_field_tag :is_from_roster_chart, is_from_roster_chart %>

  <%= submit_tag 'Submit' %>
  <%= nbsp(2) %>
  <%= link_to 'Cancel', cancel_path %>
<% end -%>

