
<% cancel_path = @is_from_list ? players_path : player_path(@player) -%>

<%= error_messages_for :player %>

<p>
  <%= link_to 'Cancel', cancel_path %>
</p>

<% form_for @player do |f| -%>
  <%= render :partial => 'base', :locals => {:shows_form => true, :f => f} %>
  <%= hidden_field_tag :is_from_list, @is_from_list %>

  <%= submit_tag 'Submit' %>
  <%= nbsp(2) %>
  <%= link_to 'Cancel', cancel_path %>
<% end -%>

