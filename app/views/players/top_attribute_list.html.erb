
<p>
  <%= link_to 'Back to Rosters', 'list' %>
  <%= nbsp(4) %>
  <%= link_to 'Depth Chart', :action => 'depth_chart' %>
  <%= nbsp(2) %>
  <%= link_to 'Roster Chart', :action => 'roster_chart' %>
</p>

<table id="table_top_attribute_list">
  <% PlayerAttribute.fulls.each do |attr_name| -%>
    <tr>
      <th><%= column_name2display(attr_name) %></th>
      <% @map_top_players[attr_name].each do |player| -%>
        <% value = player.player_attribute.read_attribute(attr_name) -%>
        <td><%= player.name %></td>
        <td><%= value %></td>
      <% end -%>
    </tr>
  <% end -%>
</table>

