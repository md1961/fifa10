
<h3><%= @page_title %></h3>

<% form_tag :action => 'filter_on_list' do -%>
  Columns:<br />
  <% classColumnFilter.instance_variable_names.each do |name| -%>
    <%= check_box :column_filter, name %>
    <% displaying_name = case name
         when :is_right_dominant
           'dominant_leg'
         when :nation_id
           'nation'
         else
           name.to_s
       end -%>
    <%= displaying_name.camelize %>
    &nbsp;
  <% end -%>

  <p>
    <%= submit_tag 'Apply' %>
  </p>
<% end -%>

